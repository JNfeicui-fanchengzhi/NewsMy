<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@mipmap/bg_slidingmenu_left"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="立刻登陆"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/addimport_qq"/>

        <ImageButton
            android:id="@+id/weixin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/fun_share_weixin"/>

        <ImageButton
            android:id="@+id/weobo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/fun_share_weibo"/>

        <ImageButton
            android:id="@+id/friends"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/fun_share_friends"/>
    </LinearLayout>
</LinearLayout>